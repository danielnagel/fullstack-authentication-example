{
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jest"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    }
}